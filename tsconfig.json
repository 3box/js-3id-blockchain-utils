{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "typeRoots": [
      "./@types", "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/fixtures.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": ["./src/**/*"]
}
